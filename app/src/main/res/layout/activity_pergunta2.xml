<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pergunta2">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="503dp"
        android:layout_height="865dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.239"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/fundoeleitoral" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="304dp"
        android:layout_height="142dp"
        android:layout_marginTop="16dp"
        android:text="Em quem você votaria nessa eleição?"
        android:textColor="@color/design_default_color_error"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etSeuVoto"
        android:layout_width="158dp"
        android:layout_height="68dp"
        android:layout_marginTop="168dp"
        android:ems="10"
        android:hint="Seu Candidato"
        android:inputType="text"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etPrimeiroNome"
        android:layout_width="158dp"
        android:layout_height="71dp"
        android:layout_marginTop="236dp"
        android:ems="10"
        android:hint="Seu Primeiro Nome"
        android:inputType="text"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etEstadoCivil"
        android:layout_width="158dp"
        android:layout_height="78dp"
        android:layout_marginTop="308dp"
        android:ems="10"
        android:hint="Seu Estado Civil"
        android:inputType="text"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.141"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etIdade"
        android:layout_width="162dp"
        android:layout_height="68dp"
        android:layout_marginBottom="276dp"
        android:ems="10"
        android:hint="Sua Idade"
        android:inputType="text"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etSexo"
        android:layout_width="164dp"
        android:layout_height="65dp"
        android:layout_marginBottom="208dp"
        android:ems="10"
        android:hint="Seu Sexo"
        android:inputType="text"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.141"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etTelefone"
        android:layout_width="164dp"
        android:layout_height="72dp"
        android:layout_marginBottom="136dp"
        android:ems="10"
        android:hint="Seu Telefone"
        android:inputType="text"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.141"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etHora"
        android:layout_width="125dp"
        android:layout_height="89dp"
        android:layout_marginBottom="276dp"
        android:ems="10"
        android:hint="Hora"
        android:inputType="time"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="144dp"
        android:layout_height="74dp"
        android:layout_marginBottom="148dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="@color/design_default_color_surface"
        android:text="Cadastrar"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnVotoRapido"
        android:layout_width="140dp"
        android:layout_height="73dp"
        android:layout_marginEnd="16dp"
        android:autoSizeTextType="uniform"
        android:text="Voto Rápido"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCadastrar"
        app:layout_constraintVertical_bias="0.53" />

    <Button
        android:id="@+id/btnSair"
        android:layout_width="131dp"
        android:layout_height="72dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="64dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="@color/material_dynamic_primary10"
        android:text="Logout"
        android:textColor="@color/white"
        android:textColorLink="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/btnVotoRapido"
        app:layout_constraintTop_toBottomOf="@+id/etTelefone" />

    <EditText
        android:id="@+id/etData"
        android:layout_width="132dp"
        android:layout_height="87dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Data"
        android:inputType="date"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

</androidx.constraintlayout.widget.ConstraintLayout>